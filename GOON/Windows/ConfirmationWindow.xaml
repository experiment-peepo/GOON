<Window x:Class="GOON.Windows.ConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GOON.Windows"
        mc:Ignorable="d"
        Title="{Binding DialogTitle}" Width="450" 
        SizeToContent="Height" MinHeight="180"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        AllowsTransparency="True" Background="Transparent"
        Icon="pack://application:,,,/Images/icon.ico"
        ShowInTaskbar="False">
    <Border x:Name="MainBorder" 
            Background="{StaticResource BackgroundPrimary}" 
            BorderBrush="{StaticResource AccentPrimary}" 
            BorderThickness="1"
            CornerRadius="12">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" Background="#1A050D" CornerRadius="12,12,0,0" Height="40">
                <Grid MouseLeftButtonDown="Header_MouseLeftButtonDown">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                        <Image Source="pack://application:,,,/Images/icon.ico" Width="16" Height="16" Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding DialogTitle}" Foreground="{StaticResource TextSecondary}" FontSize="12" FontWeight="SemiBold"/>
                    </StackPanel>
                    <Button HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0"
                            Style="{StaticResource ControlButton}" Click="NoButton_Click" Width="30" Height="30">
                        <Path Data="{StaticResource Icon_Close}" Stretch="Uniform" Width="10" Height="10"/>
                    </Button>
                </Grid>
            </Border>
            
            <!-- Message Area -->
            <StackPanel Grid.Row="1" Margin="30,25,30,20">
                <TextBlock Text="{Binding Message}" 
                           Foreground="{StaticResource TextPrimary}" 
                           FontSize="15" 
                           FontWeight="Medium"
                           TextWrapping="Wrap" 
                           TextAlignment="Center"
                           LineHeight="22"/>
            </StackPanel>
            
            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                <Button x:Name="YesButton" 
                        Content="Yes" 
                        Click="YesButton_Click"
                        Style="{StaticResource PrimaryButtonStyle}" 
                        Width="100" Height="38"
                        Margin="10,0"/>
                <Button x:Name="NoButton" 
                        Content="No" 
                        Click="NoButton_Click"
                        Style="{StaticResource SecondaryButtonStyle}" 
                        Width="100" Height="38"
                        Margin="10,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
